 <% include ./partials/header %>

 <br>
 <br>
   <center><img src="resources/graphics/FormGraphic.png"></center>
   <h1 style="text-align: center">REPORT AN ISSUE</h1>


   <!-- Submission form is enclosed in a jumbotron. -->
   <div class="container jumbotron" id="main-container">

<form action= "/issue/create" method="POST" enctype="multipart/form-data">

